FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftWall_water
    {
        type            fixedValue;
        value           uniform (0.6 0 0);
    }
    leftWall_air
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    rightwall_boundary
    {
        type            fixedGradient;
        gradient        uniform (0 0 0);
    }
    lowerWall
    {
        type            noSlip;
    }
    atmosphere
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
    }
    defaultFaces
    {
        type            empty;
    }
}


// ************************************************************************* //
